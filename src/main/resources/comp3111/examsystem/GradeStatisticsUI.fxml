<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="comp3111.examsystem.controller.GradeStatisticsController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <!-- Left side: Table -->
        <VBox spacing="10" alignment="TOP_CENTER">
            <children>
                <Label text="Grade Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <HBox spacing="10" alignment="CENTER">
                    <Label text="Course:" />
                    <ComboBox fx:id="courseComboBox" prefWidth="200" />
                    <Button text="Reset" onAction="#resetFilter" />
                    <Button text="Filter" onAction="#filterResults" />
                </HBox>

                <TableView fx:id="gradeTable" prefHeight="300" prefWidth="400">
                    <columns>
                        <TableColumn text="Course ID" fx:id="courseIDColumn" />
                        <TableColumn text="Exam Name" fx:id="examNameColumn" />
                        <TableColumn text="Score" fx:id="scoreColumn" />
                        <TableColumn text="Full Score" fx:id="fullScoreColumn" />
                        <TableColumn text="Time" fx:id="timeColumn" />
                    </columns>
                </TableView>

                <HBox spacing="20" alignment="CENTER">
                    <Label fx:id="averageScoreLabel" text="Average Score: " style="-fx-font-size: 14px;" />
                </HBox>

                <Button text="Refresh" onAction="#refreshData" />
            </children>
        </VBox>

        <!-- Right side: Bar Chart -->
        <BarChart fx:id="barChart" prefHeight="400" prefWidth="600">
            <xAxis>
                <CategoryAxis label="Exam" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Score" />
            </yAxis>
        </BarChart>
    </children>
</HBox>



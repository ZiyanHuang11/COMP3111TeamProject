<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="comp3111.examsystem.controller.GradeStatisticsController" spacing="10" alignment="TOP_CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <!-- 标题 -->
        <Label text="Grade Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- 表格 -->
        <TableView fx:id="gradeTable" prefHeight="300">
            <columns>
                <TableColumn text="Course ID" fx:id="courseIDColumn" />
                <TableColumn text="Exam Name" fx:id="examNameColumn" />
                <TableColumn text="Total Score" fx:id="totalScoreColumn" />
                <TableColumn text="Score" fx:id="scoreColumn" />
                <TableColumn text="Pass/Fail" fx:id="passColumn" />
            </columns>
        </TableView>

        <!-- 统计数据 -->
        <HBox spacing="20" alignment="CENTER">
            <Label fx:id="averageScoreLabel" text="Average Score: " style="-fx-font-size: 14px;" />
            <Label fx:id="passRateLabel" text="Pass Rate: " style="-fx-font-size: 14px;" />
        </HBox>
    </children>
</VBox>

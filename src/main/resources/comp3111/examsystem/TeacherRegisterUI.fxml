<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="comp3111.examsystem.controller.TeacherRegisterController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Username -->
    <Label text="Username:"/>
    <TextField fx:id="usernameTxt" GridPane.columnIndex="1"/>

    <!-- Name -->
    <Label text="Name:" GridPane.rowIndex="1"/>
    <TextField fx:id="nameTxt" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Gender -->
    <Label text="Gender:" GridPane.rowIndex="2"/>
    <ComboBox fx:id="genderComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Age -->
    <Label text="Age:" GridPane.rowIndex="3"/>
    <TextField fx:id="ageTxt" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Position -->
    <Label text="Position:" GridPane.rowIndex="4"/>
    <ComboBox fx:id="positionComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Department -->
    <Label text="Department:" GridPane.rowIndex="5"/>
    <TextField fx:id="departmentTxt" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Password -->
    <Label text="Password:" GridPane.rowIndex="6"/>
    <PasswordField fx:id="passwordTxt" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <!-- Confirm Password -->
    <Label text="PasswordConfirm:" GridPane.rowIndex="7"/>
    <PasswordField fx:id="confirmPasswordTxt" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <!-- Buttons -->
    <Button text="Close" onAction="#handleClose" GridPane.rowIndex="8"/>
    <Button text="Register" onAction="#handleRegister" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
</GridPane>